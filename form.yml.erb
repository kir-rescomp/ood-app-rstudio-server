---
cluster: "slurm"

attributes:
  auto_queues:
    widget: "select"
    label: "Partition/Queue"
    options:
      - "short"
      - "long"
    value: "short"

  # select RStudio-Server module
  rserver:
    widget: select
    label: "RStudio-Server Version"
    options:
      - [ "2025.09.2-418", "RStudio-Server/2025.09.2-418" ]
      - [ "2024.12.1-563", "RStudio-Server/2024.12.1-563" ]
    display: true

  # select the R module(s) that should be loaded
  rapp:
    widget: select
    label: "R Version"
    options:
      - [ "4.3.1", "R/4.3.1-foss-2022b" ]
      - [ "4.3.2", "R/4.3.2-gfbf-2023a" ]
      - [ "4.5.1", "R/4.5.1-gfbf-2023a-bare-noSciPy" ]
    display: true

  cores:
    widget: "number_field"
    label: "Number of cores"
    min: 1
    max: 8
    value: 2

  ram:
    widget: "number_field"
    label: "Memory (GB)"
    min: 1
    max: 64
    value: 4

  bc_num_hours:
    widget: "number_field"
    label: "Number of hours"
    min: 1
    max: 30:00:00
    value: 2

form:
  - auto_queues
  - rserver
  - rapp
  - cores
  - ram
  - bc_num_hours
